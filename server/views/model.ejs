<!doctype html>
<html>
<head>
  <%- include('head'); %>
</head>
<body>

<%- include('nav'); %>

<main role="main" class="container">

  <div class="row mt-3">

    <div class="col-sm-6">
      <h1 class="mb-3">Model</h1>
      <dl class="mb-3">
        <dt>ID</dt>
        <dd><%= id %></dd>
        <dt>Status</dt>
        <dd><%= status %></dd>
      </dl>
      <% if(status !== 'In progress'){ %>
        <hr class="mb-3">
        <button id="sampleBtn" type="button" class="btn btn-primary" onclick="generateSample()">Generate sample</button>
        <div id="sample" class="bg-dark text-light p-3 my-3" style="display: none"></div>
      <% } %>
    </div>
    <div class="col-sm-6">
      <h2 class="mb-3">Training log</h2>
      <pre class="bg-dark text-light p-3"><%= log %></pre>
    </div>

  </div>

</main>

<script>
  function generateSample() {
    $("#sample").empty()
    $("#sample").show()

    $("#sampleBtn").prop("disabled", true )

    $.getJSON("/models/<%= id %>/sample")
      .done(function (data) {
        $("#sample").text(data.text)
      })
      .fail(function (data) {
        $("#sample").text(data && data.error || "Error occurred")
      })
      .always(function () {
        $("#sampleBtn").prop("disabled", false )
      })
  }
</script>

</body>
</html>
