<!doctype html>
<html>
<head>
  <%- include('head'); %>
</head>
<body>

<%- include('nav'); %>

<main role="main" class="container">

  <div class="row">

    <form action="train" method="post" enctype="multipart/form-data"
          class="mt-5 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3">

      <h1 class="text-center mb-5">Train new</h1>

      <div class="form-group">
        <label for="num_seqs">Number of seqs in one batch</label>
        <input name="num_seqs" type="number" id="num_seqs" class="form-control">
      </div>

      <div class="form-group">
        <label for="customFile">Choose file</label>
        <input name="file" type="file" id="customFile">
        <small class="form-text text-muted">
          File should be plain/text containing data you want to use for training
        </small>
      </div>

      <button type="submit" class="btn btn-primary">Upload</button>
    </form>

  </div>

</main>

</body>
</html>
